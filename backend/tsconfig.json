{
  "compilerOptions": {
      "lib": [ "es6", "dom"],
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "rootDir": "./src",
      "outDir": "./dist",
     "esModuleInterop": true,
     "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
  
}